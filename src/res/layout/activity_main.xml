<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:gravity="center"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnRemote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_centerHorizontal="true"                 
        android:onClick="btnClick"
        android:textAppearance="@style/my_textAppearanceButton"
        android:text="头盔视频" />

    <Button
        android:id="@+id/btnLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnRemote"
        android:layout_below="@+id/btnRemote"
        android:layout_marginTop="30dp"
        android:onClick="btnClick"
        android:textAppearance="@style/my_textAppearanceButton"
        android:text="专家视频" />

    <Button
        android:id="@+id/btnConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnLocal"
        android:layout_below="@+id/btnLocal"
        android:layout_marginTop="30dp"
        android:onClick="btnClick"    
        android:textAppearance="@style/my_textAppearanceButton"    
        android:text="参数配置" />

</RelativeLayout>