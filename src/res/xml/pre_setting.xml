<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
	<PreferenceCategory
        android:key="pref_key_remote_video" 
        android:title="头盔视频设置" >
        
	    <EditTextPreference
	        android:key="pref_key_remote_addr"
        	android:title="头盔视频地址"
        	android:summary="头盔视频地址"      
	        android:dialogTitle="请输入头盔视频地址(IP或者域名:端口)"
	        android:defaultValue="192.168.1.120:81" />
	    
	    <EditTextPreference
	        android:key="pref_key_remote_username"
        	android:title="用户名"
        	android:summary="用户名"      
	        android:dialogTitle="请输入用户名"
	        android:defaultValue="root" />		    	    

	    <EditTextPreference
	        android:key="pref_key_remote_password"
        	android:title="密码"
        	android:summary="密码"      
	        android:dialogTitle="请输入密码" 
	        android:defaultValue="12345" />
	    
	    <CheckBoxPreference
	  	  	android:key="pref_key_remote_use_vitamio"
        	android:title="使用vitamio"
        	android:summary="使用vitamio播放"	        
	        android:defaultValue="false" /> 
	        
	    <EditTextPreference
	        android:dependency="pref_key_remote_use_vitamio"
	        android:key="pref_key_remote_deviceid"
        	android:title="设备ID"
        	android:summary="设备ID"      
	        android:dialogTitle="请输入设备ID" 
	        android:defaultValue="dx11" />	 
	        
	    <EditTextPreference
	        android:dependency="pref_key_remote_use_vitamio"
	        android:key="pref_key_remote_channel"
        	android:title="通道"
        	android:summary="通道"      
	        android:dialogTitle="请输入通道" 
	        android:defaultValue="1" />	 
	        
	    <ListPreference />
	    
	    
	</PreferenceCategory>
	
	<PreferenceCategory        
        android:key="pref_key_local_video"
        android:title="专家视频设置" >
        
	    <EditTextPreference
	        android:key="pref_key_local_addr"
        	android:title="专家视频地址"
        	android:summary="专家视频地址"      
	        android:dialogTitle="请输入专家视频地址"
	        android:defaultValue="rtsp://192.168.1.111/mpeg4cif" />
	    
	    <EditTextPreference
	        android:key="pref_key_local_username"
        	android:title="用户名"
        	android:summary="用户名"      
	        android:dialogTitle="请输入用户名" />		    	    

	    <EditTextPreference
	        android:key="pref_key_local_password"
        	android:title="密码"
        	android:summary="密码"      
	        android:dialogTitle="请输入密码" />
	    	    
	</PreferenceCategory>	

</PreferenceScreen>